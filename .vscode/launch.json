{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "simulator",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/bin/sim",
            "args": ["./a.out"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/../deleteme/llvm",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "disasm",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/bin/llvm-objdump",
            "args": ["./a.out", "-xlsD", "--triple=mips"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/../deleteme/llvm",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "tablegen gen-dag-isel",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/bin/llvm-tblgen",
            "args": ["--gen-dag-isel",
                 "./llvm/lib/Target/Mips/Mips.td",
                 "-I./llvm/include/",
                 "-I./llvm/lib/Target/Mips/",
                 "-o", "${workspaceFolder}/deleteme/test.inc",
                 "-debug",
                ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "tablegen gen-i-dagsel",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/bin/llvm-tblgen",
            "args": ["--gen-i-dagsel",
                 "./llvm/lib/Target/Mips/Mips.td",
                 "-I./llvm/include/",
                 "-I./llvm/lib/Target/Mips/",
                 "-o", "${workspaceFolder}/deleteme/test-i-dag-sel.inc",
                 "-debug",
                ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}